# Ethereum / Base Configuration
# Copy to .env and fill in your values

# Base RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Contract Addresses (fill in after deployment)
ATTESTATION_REGISTRY_ADDRESS=
REVOCATION_REGISTRY_ADDRESS=

# Deployment (for Foundry scripts)
PRIVATE_KEY=

# Block Explorer API (for contract verification)
BASESCAN_API_KEY=

# Server Configuration (fail-closed defaults)
STRICT_CHAIN=true
STRICT_REVOCATION=true

# Bytecode Lock (recommended in production)
BYTECODE_LOCK_ENABLED=true
ATTESTATION_CODEHASH=
REVOCATION_CODEHASH=

# Optional Features
ATTEST_ENABLED=false

# Optional: Custom RPC endpoints
# BASE_RPC_URL=https://your-custom-base-node.example
